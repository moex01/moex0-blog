    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .cta-button:hover {
    transform: translateY(-1px);
  }

  .cta-button-secondary {
    transition: background-color 0.2s ease, color 0.2s ease, transform 0.2s ease;
  }

  .cta-button-secondary:hover {
    transform: translateY(-1px);
  }

  /* ========================================
     Terminal Typing Animation
     ======================================== */

  /* Typing effect for main heading */
  .typing-text {
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    animation: typing 0.8s steps(6, end) forwards;
    width: 0;
  }

  @keyframes typing {
    from { width: 0; }
    to { width: 6ch; }
  }

  /* Blinking cursor */
  .cursor {
    display: inline-block;
    animation: blink 1s step-end infinite;
    color: var(--color-accent-green);
    margin-left: 2px;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  /* Fade-in with delay for intro text */
  .fade-in-delay {
    opacity: 0;
    animation: fadeIn 0.5s ease-out 0.8s forwards;
  }

  /* ========================================
     Staggered Section Animations
     ======================================== */

  .animate-section {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUp 0.5s ease-out forwards;
    animation-delay: calc(0.8s + (var(--animation-order, 0) * 0.1s));
  }

  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }

  /* ========================================
     Card Hover Animations
     ======================================== */

  .achievement-card,
  .certification-card,
  .publication-card,
  .speaking-card {
    transform: translateX(0);
    transition: background-color 0.3s ease, border-color 0.3s ease, transform 0.2s ease, box-shadow 0.2s ease;
  }

  .achievement-card:hover,
  .certification-card:hover,
  .publication-card:hover,
  .speaking-card:hover {
    transform: translateX(4px);
    box-shadow: -4px 0 0 var(--color-accent-green);
  }

  /* Summary section card hover */
  .summary-section > div {
    transition: background-color 0.3s ease, border-color 0.3s ease, transform 0.2s ease, box-shadow 0.2s ease;
  }

  .summary-section > div:hover {
    transform: translateX(4px);
    box-shadow: -4px 0 0 var(--color-accent-cyan);
  }

  /* CTA section card hover */
  .cta-section > div:hover {
    transform: translateX(4px);
    box-shadow: -4px 0 0 var(--color-accent-cyan);
  }

  /* ========================================
     Interest List Animation
     ======================================== */

  .animate-section ul li {
    opacity: 0;
    animation: fadeSlideIn 0.3s ease-out forwards;
  }

  .animate-section ul li:nth-child(1) { animation-delay: calc(0.8s + (var(--animation-order, 0) * 0.1s) + 0.1s); }
  .animate-section ul li:nth-child(2) { animation-delay: calc(0.8s + (var(--animation-order, 0) * 0.1s) + 0.15s); }
  .animate-section ul li:nth-child(3) { animation-delay: calc(0.8s + (var(--animation-order, 0) * 0.1s) + 0.2s); }
  .animate-section ul li:nth-child(4) { animation-delay: calc(0.8s + (var(--animation-order, 0) * 0.1s) + 0.25s); }
  .animate-section ul li:nth-child(5) { animation-delay: calc(0.8s + (var(--animation-order, 0) * 0.1s) + 0.3s); }

  @keyframes fadeSlideIn {
    to {
      opacity: 1;
    }
  }

  /* ========================================
     Mobile Responsiveness
     ======================================== */

  @media (max-width: 640px) {
    /* Reduce card hover effects on mobile for better touch experience */
    .achievement-card:hover,
    .certification-card:hover,
    .publication-card:hover,
    .speaking-card:hover,
    .summary-section > div:hover,
    .cta-section > div:hover {
