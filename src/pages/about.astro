    .cta-button,
    .cta-button-secondary {
      font-size: 0.875rem;
      padding: 0.5rem 0.875rem;
    }

    /* Ensure typing animation works on smaller screens */
    .typing-text {
      font-size: inherit;
    }
  }

  /* ========================================
     Reduced Motion Preference
