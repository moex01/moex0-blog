  @media (prefers-reduced-motion: reduce) {
    .typing-text {
      width: auto;
      animation: none;
    }

    .cursor {
      animation: none;
      opacity: 1;
    }

    .fade-in-delay,
    .animate-section,
    .animate-section ul li {
