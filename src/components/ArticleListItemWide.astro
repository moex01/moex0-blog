---
import { getCategoryColor } from '../utils/categoryColors';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  slug: string;
  tags?: string[];
  readingTime?: string;
  image?: string;
}

const { title, description, pubDate, updatedDate, slug, tags = [], readingTime, image } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});

// Calculate "Updated X days ago" - only show if updatedDate differs from pubDate
function getUpdatedAgo(updated: Date, published: Date): string | null {
  const diffMs = updated.getTime() - published.getTime();
  const oneDayMs = 24 * 60 * 60 * 1000;
  if (diffMs < oneDayMs) return null;

  const now = new Date();
  const diffFromNow = now.getTime() - updated.getTime();
  const daysAgo = Math.floor(diffFromNow / oneDayMs);

  if (daysAgo === 0) return 'Updated today';
  if (daysAgo === 1) return 'Updated yesterday';
  if (daysAgo < 7) return `Updated ${daysAgo}d ago`;
  if (daysAgo < 30) {
    const weeks = Math.floor(daysAgo / 7);
    return `Updated ${weeks}w ago`;
  }
  if (daysAgo < 365) {
    const months = Math.floor(daysAgo / 30);
    return `Updated ${months}mo ago`;
  }
  const years = Math.floor(daysAgo / 365);
  return `Updated ${years}y ago`;
}

const updatedAgo = updatedDate ? getUpdatedAgo(updatedDate, pubDate) : null;

const accentColor = getCategoryColor(tags[0]);

// Truncate description to ~120 chars
const truncatedDesc = description.length > 120
  ? description.substring(0, description.lastIndexOf(' ', 120)) + '...'
  : description;
---

<article class="list-item-wide" style={`--item-accent: ${accentColor};`}>
  <a href={`/blog/${slug}`} class="list-item-link">
    <!-- Wide Thumbnail (16:9) -->
    {image ? (
      <div class="list-item-thumbnail">
        <img 
          src={image} 
          alt="" 
          loading="lazy" 
          decoding="async"
        />
        <div class="list-item-thumbnail-overlay"></div>
      </div>
    ) : (
      <div class="list-item-thumbnail list-item-thumbnail--placeholder">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
          <polyline points="14 2 14 8 20 8"/>
          <line x1="16" y1="13" x2="8" y2="13"/>
          <line x1="16" y1="17" x2="8" y2="17"/>
          <line x1="10" y1="9" x2="8" y2="9"/>
        </svg>
      </div>
    )}

    <!-- Content -->
    <div class="list-item-content">
      <!-- Top row: Category + Date -->
      <div class="list-item-top">
        <span class="list-item-category">{tags[0] || 'Article'}</span>
        <div class="list-item-meta-top">
          <span class="list-item-date">{formattedDate}</span>
          {readingTime && (
            <>
              <span class="list-item-dot">·</span>
              <span class="list-item-reading-time">{readingTime}</span>
            </>
          )}
          {updatedAgo && (
            <>
              <span class="list-item-dot">·</span>
              <span class="list-item-updated">{updatedAgo}</span>
            </>
          )}
        </div>
      </div>

      <!-- Title -->
      <h3 class="list-item-title" transition:name={`article-title-${slug}`}>
        {title}
      </h3>

      <!-- Description -->
      <p class="list-item-description">
        {truncatedDesc}
      </p>

      <!-- Bottom row: Tags + Arrow -->
      <div class="list-item-bottom">
        <div class="list-item-tags">
          {tags.slice(1, 4).map((tag) => (
            <span class="list-item-tag">#{tag}</span>
          ))}
        </div>
        <span class="list-item-arrow">
          <span class="arrow-text">Read</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"/>
            <path d="m12 5 7 7-7 7"/>
          </svg>
        </span>
      </div>
    </div>
  </a>
</article>

<style>
  .list-item-wide {
    --item-accent: var(--color-accent-cyan);
    
    position: relative;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  .list-item-wide::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: var(--item-accent);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 2;
  }

  .list-item-wide:hover {
    border-color: var(--item-accent);
    background: var(--color-bg-tertiary);
    transform: translateY(-2px);
    box-shadow:
      0 8px 20px -4px rgba(0, 0, 0, 0.2),
      0 0 0 1px color-mix(in srgb, var(--item-accent) 25%, transparent);
  }

  .list-item-wide:hover::before {
    opacity: 1;
  }

  .list-item-link {
    display: flex;
    flex-direction: row;
    text-decoration: none;
  }

  /* Wide Thumbnail (16:9) */
  .list-item-thumbnail {
    flex-shrink: 0;
    width: 200px;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--color-bg-tertiary);
    position: relative;
  }

  .list-item-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .list-item-wide:hover .list-item-thumbnail img {
    transform: scale(1.08);
  }

  .list-item-thumbnail-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to right,
      transparent 60%,
      var(--color-bg-secondary) 100%
    );
    opacity: 0.5;
    transition: opacity 0.3s ease;
  }

  .list-item-wide:hover .list-item-thumbnail-overlay {
    opacity: 0.3;
  }

  .list-item-thumbnail--placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);
  }

  /* Content */
  .list-item-content {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    padding: 1rem 1.25rem;
  }

  /* Top row */
  .list-item-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
  }

  .list-item-category {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--item-accent);
    padding: 0.25rem 0.625rem;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: 1px solid color-mix(in srgb, var(--item-accent) 30%, transparent);
    border-radius: 0.25rem;
    transition: all 0.2s ease;
  }

  .list-item-wide:hover .list-item-category {
    background: rgba(255, 255, 255, 0.12);
    border-color: var(--item-accent);
    box-shadow: 0 0 10px color-mix(in srgb, var(--item-accent) 25%, transparent);
  }

  .list-item-meta-top {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--color-text-muted);
  }

  .list-item-dot {
    opacity: 0.5;
  }

  .list-item-updated {
    color: var(--color-accent-green);
    font-weight: 500;
  }

  /* Title */
  .list-item-title {
    font-size: 1.0625rem;
    font-weight: 600;
    line-height: 1.35;
    color: var(--color-text-primary);
    margin: 0;
    transition: color 0.2s ease;
    
    /* Two line truncate */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .list-item-wide:hover .list-item-title {
    color: var(--item-accent);
  }

  /* Description */
  .list-item-description {
    font-size: 0.8125rem;
    line-height: 1.5;
    color: var(--color-text-secondary);
    margin: 0;

    /* Two line truncate for better context */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Bottom row */
  .list-item-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
    margin-top: auto;
  }

  .list-item-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .list-item-tag {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    color: var(--color-text-secondary);
    padding: 0.15rem 0.4rem;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 0.2rem;
    transition: all 0.2s ease;
  }

  .list-item-tag:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--item-accent);
    color: var(--item-accent);
  }

  .list-item-arrow {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-text-muted);
    transition: all 0.3s ease;
  }

  .arrow-text {
    opacity: 0;
    transform: translateX(-8px);
    transition: all 0.3s ease;
  }

  .list-item-wide:hover .list-item-arrow {
    color: var(--item-accent);
  }

  .list-item-wide:hover .arrow-text {
    opacity: 1;
    transform: translateX(0);
  }

  .list-item-arrow svg {
    transition: transform 0.3s ease;
  }

  .list-item-wide:hover .list-item-arrow svg {
    transform: translateX(3px);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .list-item-link {
      flex-direction: column;
    }

    .list-item-thumbnail {
      width: 100%;
      aspect-ratio: 16 / 9;
    }

    .list-item-thumbnail-overlay {
      background: linear-gradient(
        to bottom,
        transparent 60%,
        var(--color-bg-secondary) 100%
      );
    }

    .list-item-content {
      padding: 1rem;
    }

    .list-item-title {
      font-size: 1rem;
    }

    .list-item-description {
      display: none;
    }

    .arrow-text {
      display: none;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .list-item-wide,
    .list-item-wide::before,
    .list-item-thumbnail img,
    .list-item-arrow,
    .list-item-arrow svg,
    .arrow-text {
      transition: none;
    }

    .list-item-wide:hover {
      transform: none;
    }

    .list-item-wide:hover .list-item-thumbnail img {
      transform: none;
    }
  }
</style>
