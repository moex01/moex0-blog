---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article class="page-content max-w-2xl">
    <header class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold text-[--color-text-primary] mb-4 font-mono">
        <span class="text-[--color-accent-green]">$</span> {title}
      </h1>
      {description && (
        <p class="text-lg text-[--color-text-secondary]">{description}</p>
      )}
    </header>

    <div class="prose prose-invert max-w-none">
      <slot />
    </div>
  </article>
</BaseLayout>

<style is:global>
  /* Markdown content styling for pages */
  .page-content .prose {
    color: var(--color-text-secondary);
  }

  .page-content .prose h2 {
    color: var(--color-text-primary);
    font-family: var(--font-mono);
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .page-content .prose h2::before {
    content: '$ ';
    color: var(--color-accent-green);
  }

  .page-content .prose h3 {
    color: var(--color-text-primary);
    font-size: 1.125rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .page-content .prose p {
    margin-bottom: 1rem;
    line-height: 1.75;
  }

  .page-content .prose a {
    color: var(--color-accent-cyan);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .page-content .prose a:hover {
    color: var(--color-accent-green);
    text-decoration: underline;
  }

  .page-content .prose ul,
  .page-content .prose ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .page-content .prose li {
    margin-bottom: 0.5rem;
  }

  .page-content .prose ul > li::marker {
    color: var(--color-accent-green);
  }

  .page-content .prose ol > li::marker {
    color: var(--color-accent-cyan);
  }

  .page-content .prose strong {
    color: var(--color-text-primary);
    font-weight: 600;
  }

  .page-content .prose em {
    color: var(--color-accent-cyan);
    font-style: italic;
  }

  .page-content .prose code {
    background-color: var(--color-bg-tertiary);
    color: var(--color-accent-green);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-family: var(--font-mono);
    font-size: 0.875em;
  }

  .page-content .prose pre {
    background-color: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 1rem;
    margin: 1rem 0;
    overflow-x: auto;
  }

  .page-content .prose pre code {
    background: none;
    padding: 0;
    border-radius: 0;
  }

  .page-content .prose blockquote {
    border-left: 3px solid var(--color-accent-cyan);
    padding-left: 1rem;
    margin: 1rem 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .page-content .prose hr {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 2rem 0;
  }

  /* Card-like sections using blockquotes with special markers */
  .page-content .prose blockquote p:first-child strong:first-child {
    color: var(--color-accent-green);
  }
</style>
