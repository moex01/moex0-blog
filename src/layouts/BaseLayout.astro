---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Search from '../components/Search.astro';
import MatrixRain from '../components/MatrixRain.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = 'moex0 - Cybersecurity Blog', image = '/images/og-default.png' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title} | moex0</title>
    <meta name="title" content={`${title} | moex0`} />
    <meta name="description" content={description} />
    <meta name="author" content="moex0" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | moex0`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | moex0`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="moex0 Blog RSS Feed" href="/rss.xml" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />

    <!-- Analytics Options (choose one and uncomment) -->

    <!-- Option 1: Cloudflare Web Analytics (RECOMMENDED - 100% free, no self-hosting) -->
    <!-- Get your token at: https://dash.cloudflare.com → Analytics & Logs → Web Analytics → Add site -->
    <!-- <script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "YOUR_TOKEN_HERE"}'></script> -->

    <!-- Option 2: GoatCounter (free for non-commercial) -->
    <!-- Sign up at: https://www.goatcounter.com/ -->
    <!-- <script data-goatcounter="https://YOUR_CODE.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script> -->

    <!-- Option 3: Umami (requires self-hosting) -->
    <!-- <script defer src="https://your-umami-instance.com/script.js" data-website-id="your-website-id"></script> -->

    <!-- Slot for additional head content (e.g., JSON-LD schemas) -->
    <slot name="head" />

    <!-- View Transitions for smooth navigation -->
    <ClientRouter />
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Skip to content link for accessibility -->
    <a href="#main-content" class="skip-link">Skip to content</a>

    <MatrixRain />
    <Header transition:persist transition:name="site-header" />
    <main id="main-content" class="flex-1 w-full max-w-6xl mx-auto px-4 lg:px-8 py-8" transition:animate="fade" transition:name="main-content">
      <slot />
    </main>
    <Footer transition:name="site-footer" />
    <Search transition:persist="search-modal" />
  </body>
</html>
